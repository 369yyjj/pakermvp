<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_recommend_restaurant"
        android:layout_width="@dimen/dp_155"
        android:layout_height="@dimen/dp_100"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="5dp"
        app:riv_mutate_background="true" />

    <TextView
        android:id="@+id/tv_recommend_restaurant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:minLines="2"
        android:maxLines="2"
        android:textColor="@color/home_recommend_restaurant_name_color"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="@+id/riv_recommend_restaurant"
        app:layout_constraintRight_toRightOf="@+id/riv_recommend_restaurant"
        app:layout_constraintTop_toBottomOf="@+id/riv_recommend_restaurant" />


</androidx.constraintlayout.widget.ConstraintLayout>